<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_linear_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.ben.cs496ui.LinearVerticalActivity">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="@string/choosePic"
            android:textColor="@color/colorTextPrimaryLight"
            android:textSize="45sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/pic1button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="waterfall.jpg" />

            <RadioButton
                android:id="@+id/pic2button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sunset.jpg" />

            <RadioButton
                android:id="@+id/pic3button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="storm.jpg" />

            <RadioButton
                android:id="@+id/pic4button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="forest_fire.png" />

            <RadioButton
                android:id="@+id/pic5button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="clouds.png" />

        </RadioGroup>

        <TextView
            android:id="@+id/image_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/defaultPicName" />

        <ImageView
            android:id="@+id/chosen_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/stick_figure"/>

    </LinearLayout>

</ScrollView>